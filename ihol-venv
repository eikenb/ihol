#!/bin/sh

if [ ! -e ~/scratch/o365/venv/bin/activate ]
then
    mkdir -p ~/scratch/o365
    cd ~/scratch/o365
    pyvenv --system-site-packages venv
    . ~/scratch/o365/venv/bin/activate
    pip install -U o365
    pip install -U icalendar
    pip install -U pylint
fi

cd $(dirname $0)

. ~/scratch/o365/venv/bin/activate
./ihol.py "$@"

